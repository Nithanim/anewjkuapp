<resources>

    <style name="chip">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">#ff339bff</item>
    </style>

    <style name="card_expand" parent="Text.Body2">
        <item name="android:paddingLeft">@dimen/card_content_padding</item>
        <item name="android:paddingRight">@dimen/card_content_padding</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="oeh_text_title" parent="Text.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:layout_marginTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="oeh_text_content" parent="Text.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Material Text Styles -->
    <style name="Text">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.Body1" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.Body2" parent="@style/Text">
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Text.Title" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Text.Button" parent="@style/Text">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <attr name="themed_plot_background_color" format="reference"/>
    <style name="plotStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:padding">3dp</item>
        <!--<item name="androidPlot.graphWidget.background">?attr/plot_background_color</item>-->
    </style>

    <attr name="cardBackground" format="reference"/>
    <style name="card">
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_default_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/card_content_padding</item>
        <item name="cardBackgroundColor">?attr/cardBackground</item>
    </style>

    <!--this styles are for toolbars in cards-->
    <attr name="cardToolbarStyle" format="reference"/>
    <style name="cardToolbar" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="cardToolbar.light" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/accent</item>
    </style>

</resources>
