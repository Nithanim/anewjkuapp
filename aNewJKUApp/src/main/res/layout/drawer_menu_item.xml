<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/drawer_margin_horizontal"
    android:paddingRight="@dimen/drawer_margin_horizontal">

    <ImageView
        android:id="@+id/drawer_menu_item_icon"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/drawer_menu_item_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/drawer_menu_item_label"
        fontPath="fonts/Roboto-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="8dip"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="@dimen/text_size_drawer_item"
        tools:text="Menu Item, a very long title that will truncate if the text is too long to show in one line." />

</LinearLayout>