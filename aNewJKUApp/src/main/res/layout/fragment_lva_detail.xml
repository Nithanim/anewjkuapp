<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.androidplot.pie.PieChart
        android:id="@+id/stat_card_lva_diagram_pie"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="3dp" />

    <com.androidplot.xy.XYPlot
        android:id="@+id/stat_card_lva_diagram_bar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        androidPlot.graphWidget.marginBottom="5dp"
        androidPlot.graphWidget.marginLeft="5dp"
        androidPlot.graphWidget.marginRight="5dp"
        androidPlot.graphWidget.marginTop="5dp"
        android:padding="3dp" />

    <ExpandableListView
        android:id="@+id/lva_lists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ExpandableListView>

</LinearLayout>