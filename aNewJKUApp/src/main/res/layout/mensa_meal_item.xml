<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mensa_meal_item_desc"
        style="@style/Text.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:padding="@dimen/separator_top_bottom_margin"
        tools:text="Meal" />

    <TextView
        android:id="@+id/mensa_meal_item_price"
        style="@style/Text.ItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/separator_top_bottom_margin"
        android:textColor="?attr/colorAccent"
        android:textStyle="bold"
        tools:text="Price" />

    <TextView
        android:id="@+id/mensa_meal_item_oeh_bonus"
        style="@style/Text.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/separator_top_bottom_margin"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="Ã–H Bonus" />
</LinearLayout>