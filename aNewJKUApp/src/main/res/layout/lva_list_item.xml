<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/card_content_padding">

    <TextView
        android:id="@+id/lva_list2_item_title"
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lva_list2_item_teacher"
            style="@style/Text.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/grade_chip"
            android:layout_toStartOf="@id/grade_chip"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/lva_list2_item_code"
            style="@style/Text.Body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lva_list2_item_teacher"
            android:layout_toLeftOf="@id/grade_chip"
            android:layout_toStartOf="@id/grade_chip"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/lva_list2_item_lvanr"
            style="@style/Text.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/grade_chip"
            android:layout_below="@id/lva_list2_item_code"
            android:layout_marginRight="@dimen/separator_top_bottom_margin"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/lva_list2_item_skz"
            style="@style/Text.Body2"
            fontPath="fonts/Roboto-Light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/lva_list2_item_lvanr"
            android:layout_marginRight="@dimen/separator_top_bottom_margin"
            android:layout_toEndOf="@id/lva_list2_item_lvanr"
            android:layout_toRightOf="@id/lva_list2_item_lvanr"
            android:gravity="center_vertical" />

        <include
            android:id="@+id/grade_chip"
            layout="@layout/grade_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/lva_list2_item_teacher" />
    </RelativeLayout>

    <include layout="@layout/separator"></include>
</LinearLayout>