<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/exam_list_item_toolbar"
        style="@style/cardToolbarStyle"
        android:theme="?attr/cardToolbarTheme">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/exam_list_item_title"
                style="@style/Text.ItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/separator_top_bottom_margin"
                android:gravity="center_vertical"
                tools:text="Title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exam_list_item_time"
                    style="@style/Text.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:gravity="center_vertical"
                    tools:text="08:00 - 10:00" />

                <TextView
                    android:id="@+id/exam_list_item_location"
                    style="@style/Text.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:gravity="center_vertical"
                    tools:text="HS 19" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_content_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exam_list_item_courseId"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="133337" />

                <TextView
                    android:id="@+id/exam_list_item_term"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="2014S" />

                <TextView
                    android:id="@+id/exam_list_item_cid"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="[521]" />
            </LinearLayout>

            <TextView
                android:id="@+id/exam_list_item_info"
                style="@style/Text.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_content_padding"
                android:textColor="?attr/colorAccent"
                android:textStyle="bold"
                tools:text="Info" />

            <TextView
                android:id="@+id/exam_list_item_description"
                style="@style/Text.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_content_padding"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="Description" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
</android.support.v7.widget.CardView>