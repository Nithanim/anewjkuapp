<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/exam_list_item_toolbar"
            style="@style/cardToolbarStyle"
            app:theme="?attr/cardToolbarTheme">

            <TextView
                android:id="@+id/exam_list_item_title"
                style="@style/Text.ItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/exam_list_item_time"
                    style="@style/Text.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/exam_list_item_location"
                    style="@style/Text.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:layout_toEndOf="@id/exam_list_item_time"
                    android:layout_toRightOf="@id/exam_list_item_time"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_content_padding">

                <TextView
                    android:id="@+id/exam_list_item_lvanr"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/exam_list_item_term"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:layout_toEndOf="@id/exam_list_item_lvanr"
                    android:layout_toRightOf="@id/exam_list_item_lvanr"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/exam_list_item_skz"
                    style="@style/Text.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/separator_top_bottom_margin"
                    android:layout_marginRight="@dimen/separator_top_bottom_margin"
                    android:layout_toEndOf="@id/exam_list_item_term"
                    android:layout_toRightOf="@id/exam_list_item_term"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <TextView
                android:id="@+id/exam_list_item_info"
                style="@style/Text.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/card_content_padding"/>

            <TextView
                android:id="@+id/exam_list_item_description"
                style="@style/Text.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_content_padding" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>